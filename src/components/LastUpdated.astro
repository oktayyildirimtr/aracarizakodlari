---
import type { Lang } from '@lib/i18n';

interface Props {
  date: string;
  lang?: Lang;
}
const { date, lang = 'tr' } = Astro.props;
const d = new Date(date);
const locale = lang === 'tr' ? 'tr-TR' : 'en-US';
const formatted = d.toLocaleDateString(locale, { day: 'numeric', month: 'long', year: 'numeric' });
const label = lang === 'tr' ? 'Son g√ºncelleme:' : 'Last updated:';
---

<time class="last-updated" datetime={d.toISOString()}>{label} {formatted}</time>
