---
import Layout from '@layouts/Layout.astro';
import { SITE_URL, CONTACT_EMAIL } from '@lib/i18n';

const lang = 'en';
const currentPath = 'en/terms-of-service';
---

<Layout
  lang={lang}
  title="Terms of Service"
  description="Terms of Service for OBD Fault Codes. Rules for using our automotive diagnostic code guide and website."
  canonical={`${SITE_URL}/${currentPath}`}
  currentPath={currentPath}
>
  <article class="static-page wrap">
    <header class="static-page__header">
      <h1 class="static-page__title">Terms of Service</h1>
      <p class="static-page__updated">Last updated: February 2025</p>
    </header>
