---
import type { Lang } from '@lib/i18n';
import { UI, ROUTES, SITE_URL, CONTACT_EMAIL, getHreflangUrls, getAlternatePath, getCanonicalUrl, normalizeRoutePath } from '@lib/i18n';
import CookieBanner from '@components/CookieBanner.astro';
import '../styles/global.css';

interface Props {
  lang: Lang;
  title: string;
  description: string;
  noindex?: boolean;
  faq?: { question: string; answer: string }[];
  articleSchema?: object;
  breadcrumbSchema?: object;
  /** Optional: current page path (fallback when pathname unavailable). Must be the exact route of this page — never alternate language, parent, or listing. */
  currentPath?: string;
}

const { lang, title, description, noindex = false, faq = [], articleSchema, breadcrumbSchema, currentPath: currentPathProp } = Astro.props;

// — Canonical: single authoritative layer. Runs once per page. No other layer may emit <link rel="canonical">.
// 1. Resolve path: route pathname (or currentPath fallback). Normalize (strip slashes and .html when build.format is 'file').
// 2. getCanonicalUrl returns https://obdfaultcode.com/<path> with no trailing slash (trailingSlash: never).
// 3. Emit exactly one unconditional <link rel="canonical"> below. No conditional rendering — prevents duplicates.
const pathFromRoute = typeof Astro.url !== 'undefined' && Astro.url?.pathname != null
  ? normalizeRoutePath(Astro.url.pathname)
  : null;
// Use pathFromRoute (actual route) as primary source, fallback to currentPathProp
// Always prefer the actual route pathname over the prop to ensure canonical matches the URL
const resolvedPath = pathFromRoute ?? (currentPathProp ?? '');
const canonicalUrl = getCanonicalUrl(resolvedPath);
// Validate canonical URL format (https, no www; non-root URLs have no trailing slash per trailingSlash: never)
if (!canonicalUrl.startsWith('https://') || canonicalUrl.includes('www.')) {
  console.warn(`[Layout] Invalid canonical URL format: ${canonicalUrl}. Expected https://, no www.`);
}

const ui = UI[lang];
const siteName = ui.siteName;
const metaTitle = title.includes(siteName) ? title : `${title} | ${siteName}`;

const hreflangUrls = getHreflangUrls(resolvedPath, lang);
const altPath = lang === 'tr' ? getAlternatePath(resolvedPath, 'en') : getAlternatePath(resolvedPath, 'tr');

const faqSchemaData = faq.length > 0 ? {
  '@context': 'https://schema.org',
  '@type': 'FAQPage',
  mainEntity: faq.map((item) => ({
    '@type': 'Question',
    name: item.question,
    acceptedAnswer: { '@type': 'Answer', text: item.answer },
  })),
} : null;

const siteSchemaData = {
  '@context': 'https://schema.org',
  '@graph': [
    {
      '@type': 'WebSite',
      '@id': `${SITE_URL}/#website`,
      url: SITE_URL,
      name: siteName,
      inLanguage: lang === 'tr' ? 'tr-TR' : 'en',
      potentialAction: {
        '@type': 'SearchAction',
        target: `${getCanonicalUrl(ROUTES[lang].codes)}?q={search_term_string}`,
        'query-input': 'required name=search_term_string',
      },
    },
    {
      '@type': 'Organization',
      '@id': `${SITE_URL}/#organization`,
      name: siteName,
      url: SITE_URL,
      contactPoint: {
        '@type': 'ContactPoint',
        email: CONTACT_EMAIL,
        contactType: 'customer service',
        availableLanguage: ['English', 'Turkish'],
      },
    },
  ],
};
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="theme-color" content="#fafafa" />
    <meta name="generator" content={Astro.generator} />
    <title>{metaTitle}</title>
    <meta name="description" content={description} />
    <!-- Canonical: only output here. No trailing slash (trailingSlash: never). Pages/components must NOT inject canonical. -->
    <link rel="canonical" href={canonicalUrl} />
    {hreflangUrls.map(({ lang: l, url }) => (
      <link rel="alternate" hreflang={l} href={url} />
    ))}
    <meta property="og:type" content="website" />
    <meta property="og:title" content={metaTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:locale" content={lang === 'tr' ? 'tr_TR' : 'en_US'} />
    <meta property="og:site_name" content={siteName} />
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={metaTitle} />
    <meta name="twitter:description" content={description} />
    {noindex ? <meta name="robots" content="noindex, nofollow" /> : <meta name="robots" content="index, follow" />}
    <script type="application/ld+json" set:html={JSON.stringify(siteSchemaData)} />
    {faqSchemaData && <script type="application/ld+json" set:html={JSON.stringify(faqSchemaData)} />}
    {articleSchema && <script type="application/ld+json" set:html={JSON.stringify(articleSchema)} />}
    {breadcrumbSchema && <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />}
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <script is:inline>
      var c = localStorage.getItem('obdfaultcode_cookie_consent');
      if (c === 'accepted' || c === 'rejected') document.documentElement.classList.add('cookie-consent-accepted');
    </script>
  </head>
  <body>
    <a href="#main-content" class="skip-link">{lang === 'tr' ? 'İçeriğe atla' : 'Skip to content'}</a>
    <header class="site-header">
      <div class="wrap site-header__inner">
        <p class="site-header__title">
          <a href={`/${ROUTES[lang].home}`}>{siteName}</a>
        </p>
        <nav class="site-header__nav" aria-label={lang === 'tr' ? 'Ana menü' : 'Main menu'}>
          <a href={`/${ROUTES[lang].home}`}>{ui.nav.home}</a>
          <a href={`/${ROUTES[lang].codes}`}>{ui.nav.codes}</a>
          <a href={`/${ROUTES[lang].about}`}>{ui.nav.about}</a>
          <a href={`/${ROUTES[lang].contact}`}>{ui.nav.contact}</a>
          <a href={`/${ROUTES[lang].terms}`}>{ui.nav.terms}</a>
          <span class="lang-switcher" aria-label={lang === 'tr' ? 'Dil seçimi' : 'Language'}>
            {lang === 'tr' ? (
              <>
                <span class="lang-switcher__current" aria-current="page">TR</span>
                <span class="lang-switcher__sep" aria-hidden="true">|</span>
                <a href={`/${getAlternatePath(resolvedPath, 'en')}`} class="lang-switcher__link" title="English">EN</a>
              </>
            ) : (
              <>
                <a href={`/${getAlternatePath(resolvedPath, 'tr')}`} class="lang-switcher__link" title="Türkçe">TR</a>
                <span class="lang-switcher__sep" aria-hidden="true">|</span>
                <span class="lang-switcher__current" aria-current="page">EN</span>
              </>
            )}
          </span>
        </nav>
      </div>
    </header>
    <main class="main" id="main-content">
      <slot />
    </main>
    <footer class="site-footer">
      <div class="wrap">
        <p class="site-footer__copy">{ui.footer.disclaimer}</p>
        <p class="site-footer__cookies">
          {ui.footer.cookies} <a href={`/${ROUTES[lang].about}`}>{ui.nav.about}</a> · <a href={`/${ROUTES[lang].contact}`}>{ui.nav.contact}</a> · <a href={`/${ROUTES[lang].cookieNotice}`}>{ui.footer.cookieNotice}</a> · <a href={`/${ROUTES[lang].privacy}`}>{ui.footer.privacy}</a> · <a href={`/${ROUTES[lang].terms}`}>{ui.footer.terms}</a>
        </p>
        <p class="site-footer__contact">
          {lang === 'tr' ? 'E-posta:' : 'Email:'} <a href={`mailto:${CONTACT_EMAIL}`}>{CONTACT_EMAIL}</a>
        </p>
        <nav class="site-footer__nav" aria-label={lang === 'tr' ? 'Alt menü' : 'Footer'}>
          <a href={`/${ROUTES[lang].about}`}>{ui.nav.about}</a>
          <a href={`/${ROUTES[lang].contact}`}>{ui.nav.contact}</a>
          <a href={`/${ROUTES[lang].privacy}`}>{ui.footer.privacy}</a>
          <a href={`/${ROUTES[lang].cookieNotice}`}>{ui.footer.cookieNotice}</a>
          <a href={`/${ROUTES[lang].terms}`}>{ui.footer.terms}</a>
        </nav>
      </div>
    </footer>
    <CookieBanner
      title={ui.cookieBanner.title}
      message={ui.cookieBanner.message}
      acceptLabel={ui.cookieBanner.accept}
      rejectLabel={ui.cookieBanner.reject}
      learnMoreLabel={ui.cookieBanner.learnMore}
      cookieNoticePath={`/${ROUTES[lang].cookieNotice}`}
    />
  </body>
</html>
